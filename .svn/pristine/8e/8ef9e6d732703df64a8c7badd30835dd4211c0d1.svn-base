@page "/categories/{Id}"

@inject IProductService ProductService
@inject NavigationManager NavigationManager

<h2 class="mb-3" style="color:darkblue">Thêm loại sản phẩm</h2>
<div class="card-body">
    <EditForm Model="Model" OnValidSubmit="AssignCates">
        @foreach (var model in Model.Categories)
        {
            <div class="form-group">
                @model.Name
                <input type="hidden" @bind-value="Model.Id" />
                <input type="hidden" @bind-value="@model.Id" />
                <input type="hidden" @bind-value="@model.Name" />
                <input type="checkbox"
                       checked="@model.Selected"
                       @bind-value="@model.Selected" />
            </div>
        }

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </div>
    </EditForm>
</div>

@code{
    [Parameter]
    public string Id { get; set; }
    public CategoryAssignRequest Model = new CategoryAssignRequest();

    protected override async Task OnInitializedAsync()
    {
        Model = await ProductService.GetCateAssignRequest(int.Parse(Id));
        Model.Id = int.Parse(Id);
    }

    private async Task AssignCates()
    {
        await ProductService.AssignCate(Model);
        NavigationManager.NavigateTo("/listProduct");
        StateHasChanged();
    }
}

