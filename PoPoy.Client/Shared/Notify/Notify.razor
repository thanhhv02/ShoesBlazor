

  <div class="content">
    

    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-md-5 mx-2 p-0">
          <div class="dropdown custom-dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-link" aria-haspopup="true" aria-expanded="false">
                        <span class="wrap-icon icon-notifications"><i class="bx bx-bell"></i></span>
                        
              <span class="number">@notifications.Count(p => !p.IsRead)</span>
              
            </a>

            <div class="dropdown-menu  messaging--dropdown dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <div class="title-wrap d-flex align-items-center">
                <h3 class="title mb-0">Notifications</h3>
                <a @onclick="ReadAllNoti" class="small ml-auto text-info">Mark all as read</a>
              </div>

              <ul class="custom-notifications">
                @foreach (var item in notifications)
                {
                                var isread = item.IsRead ? "read" : "unread";
                                <li class="@isread">
                                    <a  href="@item.DataUrl" @onclick="() => ReadNoti(item)" class="d-flex">
                                       @* <div class="img mr-3">
                                            <img src="~/images/avatar.jpg" alt="Image" class="img-fluid">
                                        </div>*@
                                        <div class="text">
                                            <strong>@item.Title <span style="color: gray ;font-size:10px">- @item.Created.ToString("dd/MM/yyyy HH:mm")</span></strong> <br> @item.Message
                                        </div>
                                    </a>
                                </li>
                            }


              </ul>
              <p class="text-center m-0 p-0"><a href="#" class="small">View All</a></p>
          
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    
