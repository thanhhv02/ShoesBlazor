@page "/products/{productId:int}/review/{reviewId:int}/update"
@attribute [Authorize]

<PageInfos Title="Sửa đổi đánh giá cho sản phẩm này"></PageInfos>

<a href=@($"/products/{ProductId}") class="mt-3 mb-3">← Quay lại trang sản phẩm</a>
<h2 class="mb-2">Sửa đổi đánh giá cho sản phẩm này</h2>

<ReviewEditor Mode="FormEditMode.Update" ProductId="@ProductId" ReviewId="@ReviewId"></ReviewEditor>

@code{
    [Parameter]
    public int ProductId { get; set; }

    [Parameter]
    public int ReviewId { get; set; }
}
