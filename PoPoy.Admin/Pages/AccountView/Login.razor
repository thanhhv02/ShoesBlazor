@page "/login"
@layout LoginLayout;

@using PoPoy.Shared;
@using PoPoy.Shared.ViewModels;
@using PoPoy.Admin.Services;

@inject NavigationManager NavigationManager;
@inject IAuthService AuthService;

<PageInfos Title="Đăng nhập"></PageInfos>
@if (ShowErrors)
{
    <div class="alert alert-danger">
        <p>@Error</p>
    </div>
}
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <EditForm Model="LoginModel" OnValidSubmit="HandleLogin">
                                        <DataAnnotationsValidator></DataAnnotationsValidator>

                                        <div class="form-group">
                                            <label for="username">Username</label>
                                            <InputText id="username" class="form-control" @bind-Value="LoginModel.UserName"></InputText>
                                            <ValidationMessage For="()=> LoginModel.UserName"></ValidationMessage>
                                        </div>

                                        <div class="form-group">
                                            <label for="password">Password</label>
                                            <InputText id="password" type="password" class="form-control" @bind-Value="LoginModel.Password"></InputText>
                                            <ValidationMessage For="()=> LoginModel.Password"></ValidationMessage>
                                        </div>
                                        <button type="submit" class="btn btn-success">Login</button>
                                    </EditForm>
                                    
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>

@code {
    private bool ShowErrors;
    private string Error = "";
    private LoginRequest LoginModel = new LoginRequest();

    private async Task HandleLogin()
    {
        ShowErrors = false;

        var result = await AuthService.Login(LoginModel);
        if (result.Success)
        {
            NavigationManager.NavigateTo("/");
        }
        else
        {
            ShowErrors = true;
            Error = result.Message;
        }
    }
}