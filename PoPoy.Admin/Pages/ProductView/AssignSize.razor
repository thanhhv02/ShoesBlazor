@page "/sizesd/{Id}"

@inject IProductService ProductService
@inject NavigationManager NavigationManager

<h2 class="mb-3" style="color:darkblue">Thêm kích cỡ</h2>
<div class="card-body">
    <EditForm Model="Model" OnValidSubmit="AssignSizes">
        @foreach (var model in Model.Sizes)
        {
            <div class="form-group">
                <input type="hidden" @bind-value="Model.Id" />
                <input type="hidden" @bind-value="@model.Id" />
                <input type="hidden" @bind-value="@model.Name" />
                <input type="checkbox"
                       checked="@model.Selected"
                       @bind-value="@model.Selected" />
                @model.Name
            </div>
        }

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </div>
    </EditForm>
</div>

@code{
    [Parameter]
    public string Id { get; set; }
    public SizeAssignRequest Model = new SizeAssignRequest();

    protected override async Task OnInitializedAsync()
    {
        Model = await ProductService.GetSizeAssignRequest(int.Parse(Id));
        Model.Id = int.Parse(Id);
    }

    private async Task AssignSizes()
    {
        await ProductService.AssignSize(Model);
        NavigationManager.NavigateTo("/listProduct");
        StateHasChanged();
    }
}

